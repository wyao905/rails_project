<h1>Animals</h1>
<p>
    <% exhibits.each do |exhibit| %>
        <h3><%= exhibit.name %> Exhibit</h3>
        <% if exhibit.animals.empty? %>
            <p>There are no animals currently in this exhibit.</p>
        <% else %>
            <% exhibit.animals.each do |animal| %>
                <%= "#{animal.species} - #{animal.name}" %>
                | 
                <% if user.nil? %>
                    <%= link_to "View #{animal.name}", animal_path(animal) %>
                <% else %>
                    <%= link_to "View #{animal.name}", zookeeper_user_animal_path(user, animal) %>
                <% end %><br>
            <% end %>
        <% end %>
    <% end %>
</p>