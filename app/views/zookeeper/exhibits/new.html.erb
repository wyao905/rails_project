<h1>Open New Exhibit</h1>
<%= form_for @exhibit, url: zookeeper_user_exhibits(@user), method: "POST" do |f| %>

    <%= f.fields_for :animals do |animal_builder| %>
        Name:<br>
        <%= animal_builder.text_field :name %><br><br>
        Select existing or new species:<br>
        <%= animal_builder.collection_select :species, @species, :to_s, :to_s %><br>
        <%= animal_builder.text_field :species %><br>
    <% end %>
    <%= f.submit "Donate" %>
<% end %>