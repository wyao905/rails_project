<h3>Donation made to <%= @donation.exhibit.name %></h3>
<p>$<%= @donation.amount %></p>
<p>
    Current Message:<br>
    <%= @donation.message %>
</p>
<p>
    <%= form_for @donation, url: user_donation_path(@user, @donation), method: "PATCH" do |f| %>
        <%= f.label "New Message" %><br>
        <%= f.text_area :message, value: nil %><br>
        <%= f.submit %>
    <% end %>
</p>