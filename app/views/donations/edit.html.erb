<h3>Donation made to <%= @donation.exhibit.name %></h3>
<p>$<%= @donation.amount %></p>
<p>
    Current Message:<br>
    <%= @donation.message %>
</p>
<p>
    <%= form_for @donation do |f| %>
        <%= f.label "New Message" %><br>
        <%= f.text_area :message %><br>
        <%= f.submit %>
    <% end %>
</p>